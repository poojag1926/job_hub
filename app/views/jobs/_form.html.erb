<div class="row">
	<center>
		<div class="well", style="width:50%">
			<%= form_for @job do|f| %>
	      <h2 class="cus-align-center">Create Job</h2><br />
	      <div class="form-group-row">
	      	<%= f.label :category, class: 'col-sm-2 col-form-label-lg'%>
          <div class="col-sm-10">
	          <%= f.select :category_id,options_from_collection_for_select(Category.all, 'id', 'category_name'), {prompt: 'select category'}, class: 'form-control' %><br />
	        </div>
	      </div>
	      <div class="form-group-row">
	      	<%= f.label :job_status, class: 'col-sm-2 col-form-label-lg' %>
	      	<div class="col-sm-10">
	      		<%= f.select :status, job_status, {prompt: 'select status'}, class: 'form-control status_select' %><br />
	      	</div>
	      </div>
	      <div class="form-group-row">
	      	<%= f.label :title, class: 'col-sm-2 col-form-label-lg' %>
	      	<div class="col-sm-10">
	      		<%= f.text_field :title, autofocus: true, class: 'form-control', placeholder: 'job post' %><br />
	      	</div>
	      </div>
	      <div class="form-group-row">
	      	<%= f.label :required_experience, class: 'col-sm-2 col-form-label-lg' %>
	      	<div class="col-sm-10">
	      		<%= f.text_field :req_experience, autofocus: true, class: 'form-control', placeholder: 'required_experience' %><br />
	      	</div>
	      </div>
	      <div class="form-group-row">
	      	<%= f.label :Qualification, class: 'col-sm-2 col-form-label-lg'%>
	      	<div class="col-sm-10">
	      		<%= f.text_field :req_qualification, autofocus: true, class: 'form-control', placeholder:'Enter qualification'%><br />
	      	</div>
	      </div>
	      <div class="form-group-row">
	      	<%= f.label :offer_ctc, class: 'col-sm-2 col-form-label-lg' %>
	      	<div class="col-sm-10">
	      		<%= f.text_field :offer_ctc, autofocus: true, class: 'form-control', placeholder: 'Enter CTC'%><br />
	      	</div>
	      </div>
	      <div class="form-group-row">
	      	<%= f.label :contact_person, class: 'col-sm-2 col-form-label-lg' %>
	      	<div class="col-sm-10">
	      		<%= f.text_field :contact_person, autofocus: true, class: 'form-control', placeholder: 'Enter Details'%><br />
	      	</div>
	      </div>
	      <div class="form-group-row">
	      	<%= f.label :contact_no, class: 'col-sm-2 col-form-label-lg' %>
	      	<div class="col-sm-10">
	      		<%= f.text_field :contact_person_no, autofocus: true, class: 'form-control', placeholder: 'Mobile Number'%><br />
	      	</div>
	      </div>
	      <div class="form-group-row">
	      	<%= f.label :job_location, class: 'col-sm-2 col-form-label-lg' %>
	      	<div class="col-sm-10">
	      		<%= f.text_field :location, autofocus: true, class: 'form-control', placeholder: 'Enter Location'%><br />
	      	</div>
	      </div>
	      <%= f.hidden_field :company_id, value: current_user.company.id %>
        <div class="form-group-row">
	      	<%= f.label :no_of_vacancies, class: 'col-sm-2 col-form-label-lg' %>
	      	<div class="col-sm-10">
	      		<%= f.text_field :no_of_vacancies, autofocus: true, class: 'form-control', placeholder: 'No. of vacancies'%><br />
	      	</div>
	      </div>
	      <div class="form-group-row">
	      	<%= f.label :description, class: 'col-sm-2 col-form-label-lg'%>
	      	<div class="col-sm-10">
	      		<%= f.text_area :description, autofocus: :true, class: 'form-control', placeholder: 'Job description'%><br />
	      	</div>
	      </div>
	      <div class="form-group row">
          <div class="offset-12 col-log-12">
            <%= f.submit class: 'btn btn-primary' %>
          </div>
        </div>
        <div>
        <%= link_to 'Back', jobs_path, class: 'btn btn-primary' %>
        </div>
      <% end %>
		</div>
	</center>
</div>

