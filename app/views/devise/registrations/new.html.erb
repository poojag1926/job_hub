<div class="row">
  <center>
    <div class="well" style="width:50%;">
      <%= form_for(resource, as: resource_name, url: registration_path(          resource_name)) do |f| %>
        <%= devise_error_messages! %>
        <h2 class="cus-align-center">Sign Up</h2><br>
        <div class="form-group row">
          <%= f.label :name, class: 'col-sm-2 col-form-label col-form-label-lg' %>
          <div class="col-sm-10">
            <%= f.text_field :full_name, autofocus: true, class: 'form-control', placeholder: 'Enter Name' %><br />
          </div>
        </div>
        <div class="form-group row">
          <%= f.label :username, class: 'col-sm-2 col-form-label col-form-label-lg' %>
          <div class="col-sm-10">
            <%= f.text_field :username, autofocus: true, class: 'form-control', placeholder: 'user_Name' %><br />
          </div>
        </div>
        <div class="form-group row">
          <%= f.label :number, class: 'col-sm-2 col-form-label col-form-label-lg' %>
          <div class="col-sm-10">
            <%= f.text_field :contact_no, autofocus: true, class: 'form-control', placeholder: 'mobile number' %><br />
          </div>
        </div>
         <div class="form-group row">
          <%= f.label :city, class: 'col-sm-2 col-form-label col-form-label-lg' %>
          <div class="col-sm-10">
            <%= f.text_field :city, autofocus: true, class: 'form-control', placeholder: 'enter city' %><br />
          </div>
        </div>
         <div class="form-group row">
          <%= f.label :state, class: 'col-sm-2 col-form-label-lg' %>
          <div class="col-sm-10">
            <%= f.text_field :state, autofocus: true, class: 'form-control', placeholder: 'enter state' %><br />
          </div>
        </div>
        <div class="form-group row">
          <%= f.label :role, class: 'col-sm-2 col-form-label-lg' %>
          <div class="col-sm-10">
            <%= f.select :role, User::USER_ROLES.map{|role| [role.gsub("_"," ").capitalize, role]}, {prompt: 'select role'},   class: 'form-control' %><br />
          </div>
        </div>
        <div class="form-group row">
          <%= f.label :email, class: 'col-sm-2 col-form-label col-form-label-lg' %>
          <div class="col-sm-10">
            <%= f.email_field :email, autofocus: true, class: 'form-control', placeholder: 'Enter Email' %><br />
          </div>
        </div>
        <div class="form-group row">
          <%= f.label :password, class: 'col-sm-2 col-form-label col-form-label-lg' %>
          <div class="col-sm-10">
            <%= f.password_field :password, autocomplete: "off", class: 'form-control', placeholder: 'password' %>
            <% if @minimum_password_length %>
              <em class="cus-align-right">(<%= @minimum_password_length %> characters minimum)</em>
            <% end %><br />
          </div>
        </div>
        <div class="form-group row">
          <%= f.label :retype_password, class: 'col-sm-2 col-form-label col-form-label-lg' %>
          <div class="col-sm-10">
            <%= f.password_field :password_confirmation, autocomplete: "off", class: 'form-control', placeholder: 'confirm_password' %>
            <% if @minimum_password_length %>
              <em class="cus-align-right">(<%= @minimum_password_length %> characters minimum)</em>
            <% end %>
          </div>
        </div>

        <div class="form-group row">
          <div class="offset-12 col-sm-10">
          <%= f.submit "Sign up",class: 'btn btn-primary btn-md'%><br>
          </div>
        </div>
        <p class="cus-align-left">already have an account?
          <%= render "devise/shared/links" %>
        </p>
      <% end %>
    </div>
  </center>
</div>