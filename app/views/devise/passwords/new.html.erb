<div class="row">
  <center>
    <div class="well" style="width:50%;">
      <h2 class="cus-align-center">Forget Your Password?</h2><br>
      <%= form_for(resource, as: resource_name, url: password_path(resource_name), html: { method: :post }) do |f| %>
        <div class="form-group row">
          <%= f.label :email, class: 'col-sm-2 col-form-label col-form-label-lg' %>
          <div class="col-sm-10">
            <%= f.email_field :email, autofocus: true, class: 'form-control', placeholder: 'Enter Email' %><br />
          </div>
        </div>
        <div class="form-group row">
          <div class="offset-12 col-sm-10">
            <%= f.submit "submit", class: 'btn btn-primary btn-md' %>
          </div>
        </div>
        <div class="cus-align-left">
        <%= render "devise/shared/links", class: 'cus-align-set' %>
        </div>
       <% end %>
    </div>
  </center>
</div>













