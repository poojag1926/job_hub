<div class="row">
  <center>
    <div class="well", style="width: 50%">
      <% if @company.errors.any? %>
        <div id="error_explanation">
          <h2><%= pluralize(@company.errors.count, "error") %> prohibited this company from being saved:
          </h2>
          <ul>
          <% @company.errors.full_messages.each do |msg| %>
            <li><%= msg %></li>
          <% end %>
          </ul>
        </div>
      <% end %>
      <%= form_for @company do|f| %>
        <h2 class="cus-align-centre">Company Details</h2><br />
        <div class="form-group row">
          <%= f.label :name, class: 'col-sm-2 col-form-label-lg' %>
          <div class="col-sm-10">
            <%= f.text_field :company_name, autofocus: true, class: 'form-control', placeholder: 'Enter Name' %><br />
          </div>
        </div>
        <%= f.hidden_field :owner_id, value: current_user.id %>
        <div class="form-group row">
          <%= f.label :type, class: 'col-sm-2 col-form-label-lg' %>
          <div class="col-sm-10">
            <%= f.text_field :company_type, autofocus: true, class: 'form-control', placeholder: 'Enter type' %><br />
          </div>
        </div>
        <div class="form-group row">
          <%= f.label :contact_mail, class: 'col-sm-2 col-form-label-lg' %>
          <div class="col-sm-10">
            <%= f.email_field :contact_mail, autofocus: true, class: 'form-control', placeholder: 'Enter Email' %><br />
          </div>
        </div>
        <div class="form-group row">
          <%= f.label :location, class: 'col-sm-2 col-form-label-lg' %>
          <div class="col-sm-10">
            <%= f.text_field :company_location, autofocus: true, class: 'form-control', placeholder: 'Enter location' %><br />
          </div>
        </div>
        <div class="form-group row">
          <%= f.label :state, class: 'col-sm-2 col-form-label-lg' %>
          <div class="col-sm-10">
            <%= f.text_field :company_state, autofocus: true, class: 'form-control', placeholder: 'Enter Sate' %><br />
          </div>
        </div>
        <div class="form-group row">
          <div class="offset-12 col-log-12">
            <%= f.submit class: 'btn btn-primary' %>
          </div>
        </div>
        <%= link_to 'back', root_path, class: 'btn btn-primary' %>
      <% end %>
    </div>
  </center>
</div>  
